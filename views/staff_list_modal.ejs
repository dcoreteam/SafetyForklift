<!DOCTYPE html>
<html data-bs-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <title>Staff Management</title>
    <!-- Bootstrap 5 CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    >
  </head>
  <body>
    <!-- เรียกใช้ Partial Navbar -->
    <%- include('partials/navbar') %>

    <div class="container mt-4">
      <h1>Staff Management</h1>

      <!-- ปุ่ม Add Staff -->
      <button
        class="btn btn-primary mb-3"
        data-bs-toggle="modal"
        data-bs-target="#staffModal"
        onclick="openAddStaffModal()"
      >
        Add Staff
      </button>

      <!-- ตารางแสดง Staff -->
      <table class="table table-bordered table-striped table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Job Title</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Company</th>
            <th>Site</th>
            <th>Shift Time</th>
            <th>Department</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (staffs.length === 0) { %>
            <tr>
              <td colspan="10" class="text-center">No staff found.</td>
            </tr>
          <% } else { %>
            <% staffs.forEach(staff => { %>
              <tr>
                <td><%= staff.staff_id %></td>
                <td><%= staff.staff_name %></td>
                <td><%= staff.job_title || '' %></td>
                <td><%= staff.phone_no || '' %></td>
                <td><%= staff.email || '' %></td>
                <td><%= staff.company_name %></td>
                <td><%= staff.site_name || '' %></td>
                <td><%= staff.shift_time_name || '' %></td>
                <td><%= staff.department || '' %></td>
                <td>
                  <!-- ปุ่ม Edit -->
                  <button
                    class="btn btn-sm btn-warning"
                    data-bs-toggle="modal"
                    data-bs-target="#staffModal"
                    onclick="openEditStaffModal(
                      <%= staff.staff_id %>,
                      '<%= staff.staff_name.replace(/'/g, '\\\'') %>',
                      '<%= staff.job_title ? staff.job_title.replace(/'/g, '\\\'') : '' %>',
                      <%= staff.company_id %>,
                      '<%= staff.address ? staff.address.replace(/'/g, '\\\'') : '' %>',
                      '<%= staff.phone_no ? staff.phone_no.replace(/'/g, '\\\'') : '' %>',
                      '<%= staff.email ? staff.email.replace(/'/g, '\\\'') : '' %>',
                      <%= staff.site_id ? staff.site_id : 'null' %>,
                      <%= staff.shift_time_id ? staff.shift_time_id : 'null' %>,
                      '<%= staff.department ? staff.department.replace(/'/g, '\\\'') : '' %>'
                    )"
                  >
                    Edit
                  </button>
                  <!-- ปุ่ม Delete -->
                  <form
                    action="/management/staff/delete/<%= staff.staff_id %>"
                    method="POST"
                    class="d-inline"
                    onsubmit="return confirm('Are you sure you want to delete this staff?');"
                  >
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>

    <!-- Modal สำหรับ Add/Edit Staff -->
    <div
      class="modal fade"
      id="staffModal"
      tabindex="-1"
      aria-labelledby="staffModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <form id="staffForm" method="POST">
            <div class="modal-header">
              <h5 class="modal-title" id="staffModalLabel">Add Staff</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <input type="hidden" id="staffId" />

              <div class="mb-3">
                <label for="name" class="form-label">Name:</label>
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="name"
                  required
                />
              </div>

              <div class="mb-3">
                <label for="job_title" class="form-label">Job Title:</label>
                <input
                  type="text"
                  class="form-control"
                  id="job_title"
                  name="job_title"
                />
              </div>

              <div class="mb-3">
                <label for="company_id" class="form-label">Company:</label>
                <select class="form-select" id="company_id" name="company_id">
                  <% companies.forEach(c => { %>
                    <option value="<%= c.id %>"><%= c.name %></option>
                  <% }) %>
                </select>
              </div>

              <div class="mb-3">
                <label for="address" class="form-label">Address:</label>
                <textarea
                  class="form-control"
                  id="address"
                  name="address"
                  rows="2"
                ></textarea>
              </div>

              <div class="mb-3">
                <label for="phone_no" class="form-label">Phone:</label>
                <input
                  type="text"
                  class="form-control"
                  id="phone_no"
                  name="phone_no"
                />
              </div>

              <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                />
              </div>

              <div class="mb-3">
                <label for="site_id" class="form-label">Site:</label>
                <select class="form-select" id="site_id" name="site_id">
                  <option value="">-- None --</option>
                  <% sites.forEach(s => { %>
                    <option value="<%= s.id %>"><%= s.name %></option>
                  <% }) %>
                </select>
              </div>

              <div class="mb-3">
                <label for="shift_time_id" class="form-label">Shift Time:</label>
                <select class="form-select" id="shift_time_id" name="shift_time_id">
                  <option value="">-- None --</option>
                  <% shiftTimes.forEach(st => { %>
                    <option value="<%= st.id %>"><%= st.name %></option>
                  <% }) %>
                </select>
              </div>

              <div class="mb-3">
                <label for="department" class="form-label">Department:</label>
                <input
                  type="text"
                  class="form-control"
                  id="department"
                  name="department"
                />
              </div>

            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Close
              </button>
              <button type="submit" class="btn btn-primary" id="submitBtn">
                Save
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    ></script>

    <script>
      // ฟังก์ชันเปิด Modal ในโหมด Add Staff
      function openAddStaffModal() {
        document.getElementById('staffModalLabel').textContent = 'Add Staff';
        document.getElementById('staffForm').action = '/management/staff/add';

        // เคลียร์ฟอร์ม
        document.getElementById('staffId').value = '';
        document.getElementById('name').value = '';
        document.getElementById('job_title').value = '';
        document.getElementById('company_id').selectedIndex = 0;
        document.getElementById('address').value = '';
        document.getElementById('phone_no').value = '';
        document.getElementById('email').value = '';
        document.getElementById('site_id').selectedIndex = 0;
        document.getElementById('shift_time_id').selectedIndex = 0;
        document.getElementById('department').value = '';
      }

      // ฟังก์ชันเปิด Modal ในโหมด Edit Staff
      function openEditStaffModal(
        staffId,
        name,
        job_title,
        company_id,
        address,
        phone_no,
        email,
        site_id,
        shift_time_id,
        department
      ) {
        document.getElementById('staffModalLabel').textContent = 'Edit Staff';
        document.getElementById('staffForm').action = '/management/staff/edit/' + staffId;

        document.getElementById('staffId').value = staffId;
        document.getElementById('name').value = name;
        document.getElementById('job_title').value = job_title;
        document.getElementById('company_id').value = company_id;
        document.getElementById('address').value = address;
        document.getElementById('phone_no').value = phone_no;
        document.getElementById('email').value = email;
        if (site_id) {
          document.getElementById('site_id').value = site_id;
        } else {
          document.getElementById('site_id').selectedIndex = 0;
        }
        if (shift_time_id) {
          document.getElementById('shift_time_id').value = shift_time_id;
        } else {
          document.getElementById('shift_time_id').selectedIndex = 0;
        }
        document.getElementById('department').value = department;
      }
    </script>
  </body>
</html>
