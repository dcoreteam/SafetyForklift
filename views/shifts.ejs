<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Shift Report</title>
    <style>
      .filter-form {
        width: 80%;
        margin: 0 auto;
        margin-bottom: 20px;
      }
      .filter-form div {
        margin-bottom: 8px;
      }
      table {
        border-collapse: collapse;
        width: 80%;
        margin: 0 auto;
      }
      th, td {
        border: 1px solid #ccc;
        padding: 8px;
        text-align: center;
      }
      th {
        background-color: #f2f2f2;
      }
      h1 {
        text-align: center;
      }
    </style>
  </head>
  <body>
    <h1>Shift Report</h1>

    <!-- ฟอร์มสำหรับกรองข้อมูล -->
    <!-- method="GET" เพื่อส่ง query string เช่น ?company_id=1&staff_name=... -->
    <form class="filter-form" method="GET" action="/shifts">
      <div>
        <label>Company: </label>
        <select name="company_id">
          <option value="">-- All Companies --</option>
          <% companies.forEach(company => { %>
            <option value="<%= company.id %>" 
              <%= (filters.company_id == company.id) ? 'selected' : '' %>>
              <%= company.name %>
            </option>
          <% }) %>
        </select>
      </div>

      <div>
        <label>Card UID: </label>
        <input type="text" name="card_uid" value="<%= filters.card_uid || '' %>" />
      </div>

      <div>
        <label>Staff Name: </label>
        <input type="text" name="staff_name" value="<%= filters.staff_name || '' %>" />
      </div>

      <div>
        <label>Start Date: </label>
        <input type="date" name="start_date" value="<%= filters.start_date || '' %>" />
      </div>

      <div>
        <label>End Date: </label>
        <input type="date" name="end_date" value="<%= filters.end_date || '' %>" />
      </div>

      <div>
        <button type="submit">Filter</button>
      </div>
    </form>

    <!-- ตารางแสดงผลลัพธ์การกรอง -->
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Staff Name</th>
          <th>Company</th>
          <th>Card UID</th>
          <th>Fleet Name</th>
          <th>Check In</th>
          <th>Check Out</th>
        </tr>
      </thead>
      <tbody>
        <% if (shifts.length === 0) { %>
          <tr>
            <td colspan="7">No records found.</td>
          </tr>
        <% } else { %>
          <% shifts.forEach(shift => { %>
            <tr>
              <td><%= shift.shift_log_id %></td>
              <td><%= shift.staff_name %></td>
              <td><%= shift.company_name %></td>
              <td><%= shift.card_uid %></td>
              <td><%= shift.fleet_name %></td>
              <td><%= shift.check_in %></td>
              <td><%= shift.check_out %></td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
