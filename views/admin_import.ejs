<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Import Data</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <!-- Include Partial Navbar -->
  <%- include('partials/navbar') %>

    <div class="container mt-4">
      <h1>Import Data</h1>
      <form method="POST" action="/admin/import" enctype="multipart/form-data" class="row g-3">
        <div class="col-md-6">
          <label for="importFile" class="form-label">Choose file (CSV/Excel):</label>
          <input type="file" name="importFile" id="importFile" class="form-control" accept=".csv,.xlsx" required>
        </div>
        <div class="col-md-12">
          <button type="submit" class="btn btn-primary">Import</button>
          <a href="/admin" class="btn btn-secondary">Cancel</a>
        </div>
      </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>